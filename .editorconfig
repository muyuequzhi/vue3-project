
# EditorConfig is awesome: http://EditorConfig.org
# This file is the top-most EditorConfig file
root = true

# All Files
[*]
charset = utf-8
max_line_length = 160
# indent_style = tab
# tab_width = 4
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
[*.{js,ts,jsx,tsx,vue}]
